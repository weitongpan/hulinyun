/* pages/index/chlidrencpn/commodity/commodity.wxss */
.commodity{
  width: 700rpx;
  margin:0 auto;
  border-radius: 10rpx;
  margin-top:50rpx;
  padding-bottom: 30rpx;
}
.commodity .commodity-top{
  background-color:#f4f4f4;
}
.commodity .commodity-top .commodity-tlite{
  font-size: 30rpx;
  font-weight: 700;
  display: inline-block;
  margin-right: 20rpx;
}
.commodity .commodity-top .commodity-text{
  font-size: 24rpx;
  color: #828282;
}
.commodity .commodity-body{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  flex-direction:row;
}
.commodity .commodity-body .commodity-list{
  width: 330prx;
  background-color: #ffffff;
  border-radius: 10rpx;
  padding-bottom: 30rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.commodity .commodity-body .commodity-list .commodity-img{
  width: 100%;
}
.commodity .commodity-body .commodity-list .commodity-text{
  font-size: 24rpx;
  display: block;
  width: 320rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  padding-left: 20rpx;
  margin-top:20rpx;
}
.commodity .commodity-body .commodity-list .commmodity-info{
  margin-top: 20rpx;
}

.commodity .commodity-body .commodity-list .commmodity-info .commmodity-btn{
  background-color: #ffc85a;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 400;
  float: right;
  width: 140rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin-right: 30rpx;
  border-radius: 40rpx;
  display: inline-block;
}
.commodity .commodity-body .commodity-list .commmodity-info .commmodity-symbol{
  display: inline-block;
  padding-left: 20rpx;
  font-size: 18rpx;
  color: #ffc85a;
}
.commodity .commodity-body .commodity-list .commmodity-info .commmodity-price{
  display: inline-block;
  font-size: 26rpx;
  color: #ffc85a;
}